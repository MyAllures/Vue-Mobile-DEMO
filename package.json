{
  "name": "bison",
  "version": "1.0.0",
  "description": "A Vue.js project",
  "author": "Snow <snow@unnotech.com>",
  "private": true,
  "scripts": {
    "dev": "node --max_old_space_size=4096 node_modules/.bin/webpack-dev-server --inline --progress --config build/webpack.dev.conf.js",
    "start": "yarn run dev",
    "dll": "webpack --config ./build/webpack.dll.config.js",
    "unit": "cross-env BABEL_ENV=test jest",
    "e2e": "node test/e2e/runner.js",
    "test": "yarn run unit && yarn run e2e",
    "lint": "eslint --ext .js,.vue src test/unit/specs test/e2e/specs",
    "build": "node build/build.js",
    "build:report": "cross-env npm_config_report=true node build/build.js"
  },
  "dependencies": {
    "async-validator": "^1.8.2",
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "crypto-js": "^3.1.9-1",
    "js-combinatorics": "^0.5.3",
    "lodash": "^4.17.4",
    "lrz": "^4.9.40",
    "sass-resources-loader": "^2.0.0",
    "v-click-outside": "^2.0.2",
    "vue": "^2.5.2",
    "vue-cookie": "^1.1.4",
    "vue-i18n": "^7.7.0",
    "vue-infinite-scroll": "^2.0.2",
    "vue-lazyload": "^1.2.6",
    "vue-moment": "^4.0.0-0",
    "vue-router": "^3.0.1",
    "vue2-filters": "^0.3.0",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0",
    "vux": "^2.7.8",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.3"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.24",
    "add-asset-html-webpack-plugin": "^2.1.3",
    "autoprefixer": "^8.5.0",
    "babel-core": "^6.22.1",
    "babel-eslint": "^8.2.3",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.1",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-plugin-transform-vue-jsx": "^3.5.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "chai": "^4.1.2",
    "chalk": "^2.0.1",
    "chromedriver": "^2.40.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.2.0",
    "cross-spawn": "^6.0.5",
    "css-loader": "^0.28.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "eventsource-polyfill": "^0.9.6",
    "favicons-webpack-plugin": "0.0.9",
    "file-loader": "^1.1.4",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.2",
    "inject-loader": "^4.0.1",
    "jest": "^23.5.0",
    "jest-serializer-vue": "^2.0.2",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "lint-staged": "^7.3.0",
    "mini-css-extract-plugin": "0.4.0",
    "mocha": "^3.2.0",
    "nightwatch": "^0.9.21",
    "node-notifier": "^5.1.2",
    "node-sass": "^4.7.2",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "ora": "^2.1.0",
    "portfinder": "^1.0.13",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "rimraf": "^2.6.0",
    "sass-loader": "^6.0.6",
    "selenium-server": "^3.12.0",
    "semver": "^5.5.0",
    "shelljs": "^0.8.2",
    "url-loader": "^1.1.1",
    "vue-jest": "^2.6.0",
    "vue-loader": "^14.2.2",
    "vue-style-loader": "^4.1.0",
    "vue-template-compiler": "^2.5.2",
    "vux-loader": "^1.1.28",
    "webpack": "4.8.3",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-merge": "^4.1.0"
  },
  "engines": {
    "node": ">= 6.11.5",
    "yarn": ">= 1.7.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ],
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,vue}"
    ],
    "coverageReporters": [
      "text-summary"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^vue$": "vue/dist/vue.common.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/unit/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/test/unit/assetsTransformer.js"
    },
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "setupFiles": [
      "<rootDir>/test/config/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --quiet",
      "jest --bail --findRelatedTests"
    ]
  }
}
